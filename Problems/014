startNum = 500000;
sequence = 500000;
steps = 1;
longestNum = 0;
longestSteps = 0;
f[x_] := x/2;
g[x_] := 3 x + 1;
While[startNum < 1000000, 
 While[sequence != 1, 
  If[EvenQ[sequence], sequence = f[sequence], sequence = g[sequence]];
   steps++]; 
 If[steps > longestSteps, longestSteps = steps; 
  longestNum = startNum]; startNum++; sequence = startNum; steps = 1]
?longestNum
